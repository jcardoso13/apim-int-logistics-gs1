{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"ApimServiceName": {
			"type": "string",
			"metadata": {
				"description": "Name of the API Management"
			}
		},
		"LinkedTemplatesBaseUrl": {
			"type": "string",
			"metadata": {
				"description": "Base URL of the repository that contains the generated templates"
			}
		},
		"LinkedTemplatesUrlQueryString": {
			"type": "string",
			"metadata": {
				"description": "Query string for the URL of the repository"
			}
		},
		"PolicyXMLBaseUrl": {
			"type": "string",
			"metadata": {
				"description": "Base URL of the repository that contains the generated policy files"
			}
		}
	},
	"variables": {
		"token-apis": "?token=AJ2IBEOEX4SZ6PF4TK4HOYLAHZGBC",
		"token-backends": "?token=AJ2IBEMX4CN3TKD4NCGL66DAHZGGA",
		"token-global": "?token=AJ2IBEKP5TPUMHFHPEOFU2LAHZGJE",
		"token-named-values": "?token=AJ2IBEOIH4LSVEQR3MHHOHTAHZGME"
	},
	"resources": [
		{
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/apim-int-deloitte-namedValues.template.json', variables('token-named-values'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"ApimServiceName": {
						"value": "[parameters('ApimServiceName')]"
					},
					"PolicyXMLBaseUrl": {
						"value": "[parameters('PolicyXMLBaseUrl')]"
					}
				}
			},
			"name": "namedValuesTemplate",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-01-01",
			"dependsOn": []
		},
		{
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/apim-int-deloitte-globalServicePolicy.template.json', variables('token-global'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"ApimServiceName": {
						"value": "[parameters('ApimServiceName')]"
					},
					"PolicyXMLBaseUrl": {
						"value": "[parameters('PolicyXMLBaseUrl')]"
					}
				}
			},
			"name": "globalServicePolicyTemplate",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-01-01",
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
			]
		},
		{
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/apim-int-deloitte-backends.template.json', variables('token-backends'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"ApimServiceName": {
						"value": "[parameters('ApimServiceName')]"
					},
					"PolicyXMLBaseUrl": {
						"value": "[parameters('PolicyXMLBaseUrl')]"
					}
				}
			},
			"name": "backendsTemplate",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-01-01",
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]"
			]
		},
		{
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/apim-int-deloitte-apis.template.json', variables('token-apis'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"ApimServiceName": {
						"value": "[parameters('ApimServiceName')]"
					},
					"PolicyXMLBaseUrl": {
						"value": "[parameters('PolicyXMLBaseUrl')]"
					}
				}
			},
			"name": "apisTemplate",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-01-01",
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
				"[resourceId('Microsoft.Resources/deployments', 'globalServicePolicyTemplate')]",
				"[resourceId('Microsoft.Resources/deployments', 'backendsTemplate')]"
			]
		}
	]
}